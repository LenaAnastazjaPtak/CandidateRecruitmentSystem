{% if pageCount >= 1 %}
    <nav aria-label="Page navigation">
        <ul class="pagination">
            {% if previous is defined %}
                <li class="page-item">
                    <a rel="next" data-action="click->pagination#changePage" class="page-link" href="javascript:void(0)"
                       data-page="{{ previous }}">Previous</a>
                </li>
            {% else %}
                <li class="page-item disabled">
                    <span class="page-link">Previous</span>
                </li>
            {% endif %}

            {% for page in pagesInRange %}
                {% if page == current %}
                    <li class="page-item active">
                        <span class="page-link">{{ page }}</span>
                    </li>
                {% else %}
                    <li class="page-item">
                        <a data-action="click->pagination#changePage" class="page-link"
                           href="javascript:void(0)" data-page="{{ page }}">{{ page }}</a>
                    </li>
                {% endif %}
            {% endfor %}

            {% if next is defined %}
                <li class="page-item">
                    <a rel="next" data-action="click->pagination#changePage" class="page-link" href="javascript:void(0)"
                       data-page="{{ next }}">Next</a>
                </li>
            {% else %}
                <li class="page-item disabled">
                    <span class="page-link">Next</span>
                </li>
            {% endif %}
        </ul>
    </nav>
{% endif %}
